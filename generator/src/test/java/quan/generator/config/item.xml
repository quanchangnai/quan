<?xml version="1.0" encoding="UTF-8"?>
<package>

    <config name="ItemConfig" source="道具.csv">道具
        <field name="id" type="int" source="ID" index="unique"/>
        <field name="name" type="string" source="名字"/>
        <field name="type" type="ItemType" source="类型"/>
        <field name="list" type="list" source="List" value-type="int"/>
        <field name="set" type="set" source="Set" value-type="int"/>
        <field name="map" type="map" source="Map" key-type="int" value-type="int"/>
    </config>

    <config name="EquipConfig" parent="ItemConfig" source="装备1.csv,装备2.csv">
        <field name="position" type="int" source="部位" index="normal"/>
        <field name="color" type="int" source="颜色"/>
    </config>

    <config name="WeaponConfig" parent="EquipConfig" source="武器.csv">
        <field name="w1" type="int" source="字段1"/>
        <field name="w2" type="int" source="字段2"/>
        <index name="composite1" type="n" fields="color,w1"/>
    </config>


</package>