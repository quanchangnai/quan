<?xml version="1.0" encoding="UTF-8"?>
<package>

    <bean name="Reward" delimiter="_">奖励
        <field name="itemId" type="int"/>
        <field name="itemNum" type="int"/>
    </bean>

    <config name="ItemConfig" table="道具.csv">道具
        <field name="id" type="int" column="ID" index="unique"/>
        <field name="name" type="string" column="名字"/>
        <field name="type" type="ItemType" column="类型"/>
        <field name="reward" type="Reward" column="奖励"/>
        <field name="list" type="list" value-type="int" column="List"/>
        <field name="set" type="set" value-type="int" column="Set"/>
        <field name="map" type="map" key-type="int" value-type="int" column="Map"/>
    </config>

    <config name="EquipConfig" parent="ItemConfig" table="装备1.csv,装备2.csv">
        <field name="position" type="int" index="normal" column="部位"/>
        <field name="color" type="int" column="颜色"/>
    </config>

    <config name="WeaponConfig" parent="EquipConfig" table="武器.csv">
        <field name="w1" type="int" column="字段1"/>
        <field name="w2" type="int" column="字段2"/>
        <field name="rewardList" type="list" value-type="Reward" column="奖励List"/>
        <field name="rewardMap" type="map" key-type="int" value-type="Reward" column="奖励Map"/>
        <field name="list2" type="list" value-type="int" column="List2" delimiter="|"/>
        <index name="composite1" type="n" fields="color,w1"/>
        <index name="composite2" type="u" fields="w1,w2"/>
    </config>

</package>